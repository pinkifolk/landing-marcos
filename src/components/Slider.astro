---
import { slider } from '@data'

---

<div class="bg-slate-200 w-full">
	<div id="controls-carousel" class="relative w-full" data-carousel="static">
		<div class="relative h-[500px] overflow-hidden">
			{
				slider.map((item) =>(	
					<div class="duration-700 ease-in-out" data-carousel-item>
						<div class="absolute text-white text-center z-20 top-24 w-1/2">
							<h1 class="text-5xl font-bold py-10">
								{item.titulo}	
							</h1>
							<p class="text-xl text-balance">
								{item.descripcion}
							</p>
						
							<div class="mt-10">
								{
									item.botones?.map((boton) =>(
										<a href={boton.link} class="px-16 py-4 w-28 mx-8 borde border-2 rounded-md hover:bg-[#0da3ff] hover:border-[#0da3ff]">{boton.name}</a>
									))
								}
							</div>
							
						</div>
						<img src={item.src} class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt={item.alt} title={item.title}>
					</div>			
				))
			}
		</div>
	</div>
</div>